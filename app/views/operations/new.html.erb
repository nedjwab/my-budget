<header>
<%= render partial:"shared/navbar" ,locals: {title: 'New operation'}%>
</header>

<div>
  <%= link_to "", group_operations_path(@group)%>
  <h1>New Transaction</h1>
</div>
<div class="login-container">
<%= form_with model: @operation, url: group_operations_path, method: :post, data: { turbo: false } do |form| %>
  <div>
    <%= form.label :name,:class =>"label" %></br>
    <%= form.text_field :name,:class =>"input", placeholder: 'Transaction name' %>
  </div>
  <div>
    <%= form.label :amount ,:class =>"label"%></br>
    <%= form.text_field :amount,:class =>"input", placeholder: 12, type: "number", step: ".01" %>
  </div>
  <div>
    <%= form.collection_select :group_id, Group.where(user_id: current_user.id).order(:name),:id,:name, {prompt:'Category'},:class=>"collaps" %>
  </div>
  <div>
    <%= form.submit 'Save',class: "Add-category"%>
  </div>
<% end %>
</div>