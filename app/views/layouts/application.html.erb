<!DOCTYPE html>
<html>
  <head>
    <title>MyBudget</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= favicon_link_tag asset_path('app-icon.png') %>
  </head>

  <body>
  <div class="elements">
  <p class="logo">My Budget</p>
    <% if user_signed_in? %>
    <%= link_to "Sign out", destroy_user_session_path, method: :delete,class:"logout-button" %>
    <% end %>
  </div>
  <% if notice %>
    <p class="alert alert-success notification"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger notification"><%= alert %></p>
  <% end %>
    <%= yield %>
  </body>
</html>
